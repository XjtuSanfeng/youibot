<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youibot.docrobo.robo.main.fragment.VitalsignsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/seal_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="14dp"
            android:text="生命体征"
            android:textColor="#353535"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#dfdfdd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:background="@drawable/btn_list_item_bg"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="180dp"
                android:gravity="center_vertical"
                android:text="记录日期"
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/edit_datenow"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />
            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="14dp"
                android:background="@drawable/calendar"/>
            <Button
                android:id="@+id/btn_newsigns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:text="  新建记录  "
                android:textColor="@color/white"
                android:background="@color/button_backgroud"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/btn_list_item_bg"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:drawableLeft="@drawable/icon_1"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="体温"
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/edit_temp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="°C"
                android:textColor="@color/text_color" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#dfdfdd" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/btn_list_item_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:drawableLeft="@drawable/icon_2"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="脉搏"
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/edit_pulse"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="次/分"
                android:textColor="@color/text_color" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#dfdfdd" />

        <LinearLayout
            android:id="@+id/def_sleepstatus"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:drawableLeft="@drawable/icon_3"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="血压"
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/edit_bp"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="mmHg"
                android:textColor="@color/text_color" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#dfdfdd" />

        <LinearLayout
            android:id="@+id/def_selfevalu"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:drawableLeft="@drawable/icon_4"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="血氧"
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/edit_spo2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="%"
                android:textColor="@color/text_color" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#dfdfdd" />

        <LinearLayout
            android:id="@+id/def_reviewinfo"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@drawable/btn_list_item_bg"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="200dp"
                android:drawableLeft="@drawable/icon_4"
                android:drawablePadding="14dp"
                android:gravity="center_vertical"
                android:text="体重"
                android:textColor="@color/text_color" />

            <EditText
                android:id="@+id/edit_wt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:textColor="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:gravity="center_vertical"
                android:text="kg"
                android:textColor="@color/text_color" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="#dfdfdd" />


    </LinearLayout>

</FrameLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.youibot.docrobo.robo.main.fragment.SelfmonitorFragment"
    android:background="#FFF"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:background="#dfdfdd" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/selfmonitor_viewpager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:id="@+id/def_vitalsigns"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:drawableLeft="@drawable/icon_1"
                        android:drawablePadding="14dp"
                        android:gravity="center_vertical"
                        android:text="生命体征"
                        android:textColor="@color/text_color" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/def_reactionsymp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:drawableLeft="@drawable/icon_2"
                        android:drawablePadding="14dp"
                        android:gravity="center_vertical"
                        android:text="症状反应"
                        android:textColor="@color/text_color" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/def_sleepstatus"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:drawableLeft="@drawable/icon_3"
                        android:drawablePadding="14dp"
                        android:gravity="center_vertical"
                        android:text="睡眠状况"
                        android:textColor="@color/text_color" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/def_selfevalu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:drawableLeft="@drawable/icon_4"
                        android:drawablePadding="14dp"
                        android:gravity="center_vertical"
                        android:text="自我评价"
                        android:textColor="@color/text_color" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/def_reviewinfo"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:drawableLeft="@drawable/icon_4"
                        android:drawablePadding="14dp"
                        android:gravity="center_vertical"
                        android:text="复查信息"
                        android:textColor="@color/text_color" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
